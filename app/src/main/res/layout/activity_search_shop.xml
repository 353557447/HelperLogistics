<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">

    <com.shuiwangzhijia.wuliu.view.ClearEditText
        android:id="@+id/searchEdit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/gray_line_rectangle"
        android:drawableLeft="@drawable/search"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:hint="搜索地址"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_10"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/font_14" />

    <LinearLayout
        android:id="@+id/llResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/showAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_50"
            android:background="@color/color_ffffff"
            android:drawableLeft="@drawable/dingwei"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:text="深圳福田华能大厦25楼xxxx"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/location"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/blue_rectangle"
                android:gravity="center"
                android:text="获取当前位置"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/receiveAddress"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_30"
                android:background="@drawable/blue_rectangle"
                android:gravity="center"
                android:text="选择收货地址"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_12" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"></android.support.v7.widget.RecyclerView>
</LinearLayout>