<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5f5f5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/color_30adfd"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/msgBtn"
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_21"
                android:layout_marginLeft="@dimen/dp_7"
                android:src="@drawable/xiaoxi" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_14" />

            <ImageView
                android:id="@+id/setBtn"
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_21"
                android:layout_marginRight="@dimen/dp_7"
                android:src="@drawable/shezhi" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:background="@drawable/my_top_bg"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_10">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@drawable/morentouxiang" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@+id/image"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_10" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/phone"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image"
                android:text=""
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_14" />
        </RelativeLayout>

        <TextView
            android:id="@+id/changeBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/tongguanlibeijing"
            android:gravity="center"
            android:text="桶的管理"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_16"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/llSend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_130"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/my_item_bg"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/peisong"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="今日送水"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_13" />

                <TextView
                    android:id="@+id/totalSend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/choose"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/color_30adfd"
                    android:textSize="@dimen/font_20" />
            </RelativeLayout>

            <View
                style="@style/line_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10" />

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="今日待送水"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/font_10" />

                    <TextView
                        android:id="@+id/unSend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/color_30adfd"
                        android:textSize="@dimen/font_20" />
                </RelativeLayout>

                <View
                    style="@style/line"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="今日已完成"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/font_10" />

                    <TextView
                        android:id="@+id/finish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/color_30adfd"
                        android:textSize="@dimen/font_20" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMoney"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_130"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/my_item_bg"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/shoukuan"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="今日收款"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_13" />

                <TextView
                    android:id="@+id/totalMoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/choose"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/color_30adfd"
                    android:textSize="@dimen/font_20" />
            </RelativeLayout>

            <View
                style="@style/line_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10" />

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="扫码支付"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/font_10" />

                    <TextView
                        android:id="@+id/online"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/color_30adfd"
                        android:textSize="@dimen/font_20" />
                </RelativeLayout>

                <View
                    style="@style/line"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="司机代付"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/font_10" />

                    <TextView
                        android:id="@+id/cash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/color_30adfd"
                        android:textSize="@dimen/font_20" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBucket"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_130"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/my_item_bg"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/songshui"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="今日回桶"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_13" />

                <TextView
                    android:id="@+id/totalBucket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/choose"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/color_30adfd"
                    android:textSize="@dimen/font_20" />
            </RelativeLayout>

            <View
                style="@style/line_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10" />

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlSelfBucket"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="自营桶"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/font_10" />

                    <TextView
                        android:id="@+id/selfBucket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/color_30adfd"
                        android:textSize="@dimen/font_20" />
                </RelativeLayout>

                <View
                    style="@style/line"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10" />

                <RelativeLayout
                    android:id="@+id/rlOtherBucket"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="杂桶"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/font_10" />

                    <TextView
                        android:id="@+id/otherBucket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/color_30adfd"
                        android:textSize="@dimen/font_20" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>