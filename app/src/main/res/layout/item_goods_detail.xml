<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/font_10">


    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_85"
        android:scaleType="fitXY"
        android:src="@color/color_30adfd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="vertical"
        android:paddingLeft="@dimen/font_10">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="空气水"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="￥120"
                android:textColor="@color/color_30adfd"
                android:textSize="@dimen/font_14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/right_dish_remove"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:clickable="true"
                    android:src="@drawable/jian" />

                <TextView
                    android:id="@+id/right_dish_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_16" />

                <ImageView
                    android:id="@+id/right_dish_add"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:clickable="true"
                    android:src="@drawable/jia" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>