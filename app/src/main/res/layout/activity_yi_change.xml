<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5f5f5"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="水店名称"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_14" />

            <RelativeLayout
                android:id="@+id/rlSelectShop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/gray_rectangle">

                <TextView
                    android:id="@+id/selectShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableRight="@drawable/choose"
                    android:gravity="center"
                    android:text="选择水店"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/font_14" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llOtherBucket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@color/color_ffffff"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/font_10"
            android:visibility="gone">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="杂桶数量"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/remove"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:clickable="true"
                    android:src="@drawable/jian" />

                <TextView
                    android:id="@+id/account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_16" />

                <ImageView
                    android:id="@+id/add"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:clickable="true"
                    android:src="@drawable/jia" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPayType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@color/color_ffffff"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/font_10"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="付款方式"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/payMoneyBtn"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_40"
                    android:background="@drawable/bg_blue_gray"
                    android:gravity="center"
                    android:text="支付金额(元)"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/ticketBtn"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:background="@drawable/bg_blue_gray"
                    android:gravity="center"
                    android:text="选水票(张)"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>


            <EditText
                android:id="@+id/numTv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/gray_rectangle"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text=""
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSaveBucketRecord"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            android:visibility="gone">

            <TextView
                android:id="@+id/bucketRecordTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="压桶记录"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_14" />

            <RelativeLayout
                android:id="@+id/rlBucketRecord"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/gray_rectangle">

                <TextView
                    android:id="@+id/bucketRecordTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableRight="@drawable/choose"
                    android:gravity="center"
                    android:text="选择压桶记录"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/font_14" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMoney"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/moneyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需付款"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_14" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/unit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="￥"
                    android:textColor="@color/color_333333"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/moneyEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/unit"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:minWidth="@dimen/dp_100"
                    android:textColor="@color/color_333333"
                    android:textSize="30sp"
                    android:visibility="gone"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/moneyTv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/unit"
                    android:minWidth="@dimen/dp_100"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_333333"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="自营桶类型"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_14" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/bucketRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/addBucketBtn"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_40"
                android:layout_margin="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/orange_rectangle"
                android:gravity="center"
                android:text="添加自营桶"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/sureBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="@dimen/dp_30"
            android:background="@drawable/blue_rectangle"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_14" />
    </LinearLayout>
</ScrollView>