<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:background="@color/color_ffffff"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:drawableLeft="@drawable/time"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:text="营业时间"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_85">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:text="开始时间:"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/editStartTime"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/blue_line_rectangle"
                android:gravity="center"
                android:text="8:20"
                android:textColor="@color/color_30adfd"
                android:textSize="@dimen/font_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_85">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:text="结束时间:"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/editEndTime"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/blue_line_rectangle"
                android:gravity="center"
                android:text="22:20"
                android:textColor="@color/color_30adfd"
                android:textSize="@dimen/font_14" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/color_ffffff"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:drawableLeft="@drawable/peisongfei"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:text="配送费"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/freeBtn"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_40"
                android:background="@drawable/bg_blue_white"
                android:gravity="center"
                android:text="免运费"
                android:textColor="@drawable/gray_white"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/payBtn"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/bg_blue_white"
                android:gravity="center"
                android:text="运费"
                android:textColor="@drawable/gray_white"
                android:textSize="@dimen/font_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPayInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_35">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="配送费"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/font_12" />

                <EditText
                    android:id="@+id/editPayMoney"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_25"
                    android:background="@drawable/gray_line_rectangle"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/color_30adfd"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="元"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_35">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="满免     "
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/font_12" />

                <EditText
                    android:id="@+id/editFreeMoney"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_25"
                    android:background="@drawable/gray_line_rectangle"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/color_30adfd"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="元"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_90"
                android:layout_marginTop="@dimen/dp_5"
                android:text="满元免配送费"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_11" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/color_ffffff"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:drawableLeft="@drawable/peisongxiaolv"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:text="配送效率"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_30">

            <EditText
                android:id="@+id/editSpeed"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/gray_line_rectangle"
                android:gravity="center"
                android:textColor="@color/color_30adfd"
                android:textSize="@dimen/font_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:text="km/h"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_14" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/saveBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/blue_rectangle"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/font_14" />
</LinearLayout>