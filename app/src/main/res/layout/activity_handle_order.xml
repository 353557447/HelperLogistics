<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5f5f5"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@color/color_ffffff"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_15">

            <TextView
                android:id="@+id/shopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:drawableLeft="@drawable/shop"
                android:drawablePadding="@dimen/dp_5"
                android:text=""
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/orderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shopName"
                android:layout_marginTop="@dimen/dp_10"
                android:text="订单号:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/orderDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderId"
                android:layout_marginTop="@dimen/dp_5"
                android:text="下单时间:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/detailBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_5"
                android:layout_below="@+id/shopName"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/dp_5"
                android:drawableRight="@drawable/choose"
                android:text="查看详情"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_11" />
        </RelativeLayout>

        <TextView
            android:id="@+id/money"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@color/color_ffffff"
            android:gravity="center"
            android:text="￥31"
            android:textColor="@color/color_333333"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="数量确认（购买商品数量）"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_14" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/numRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"></android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="回收桶"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_14" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/bucketRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                ></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/addBucketBtn"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_40"
                android:layout_margin="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/orange_rectangle"
                android:gravity="center"
                android:text="添加自营桶"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_20">

            <TextView
                android:id="@+id/unPayBtn"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_weight="1"
                android:background="@drawable/orange_rectangle"
                android:gravity="center"
                android:text="赊账"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/sureBtn"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_weight="1"
                android:background="@drawable/blue_rectangle"
                android:gravity="center"
                android:text="确认送达"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_14" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>