<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context="com.shuiwangzhijia.wuliu.ui.OperationOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5f5f5"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@color/color_ffffff"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_15">

            <TextView
                android:id="@+id/shopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/shop"
                android:drawablePadding="@dimen/dp_5"
                android:text=""
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/orderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shopName"
                android:layout_marginTop="@dimen/dp_10"
                android:text="订单号:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_12" />

            <!--<TextView-->
                <!--android:id="@+id/orderDate"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/orderId"-->
                <!--android:layout_marginTop="@dimen/dp_5"-->
                <!--android:text="下单时间:"-->
                <!--android:textColor="@color/color_333333"-->
                <!--android:textSize="@dimen/font_12" />-->

            <TextView
                android:id="@+id/detailBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/shopName"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/dp_5"
                android:drawableRight="@drawable/choose"
                android:padding="@dimen/dp_5"
                android:text="查看详情"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_11" />
        </RelativeLayout>

        <TextView
            android:id="@+id/money"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@color/color_ffffff"
            android:gravity="center"
            android:text="￥31"
            android:textColor="@color/color_333333"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="已配送数量"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_14" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/numRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/addBucketBtn"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/orange_rectangle"
                android:gravity="center"
                android:text="修改数量"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/huitong_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="回桶自营桶"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_14" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/huiShouRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_15"></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/huiShouBucketBtn"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/orange_rectangle"
                android:gravity="center"
                android:text="修改数量"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="退水数量"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_14" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/tuiShuiRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_15"></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/tuiShuiBucketBtn"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/orange_rectangle"
                android:gravity="center"
                android:text="添加退水"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/zatong_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/color_ffffff"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="回收杂桶"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/font_14" />
                <ImageView
                    android:id="@+id/delete_huitong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/qingkong"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/delete_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="杂桶数量:"/>
                    <TextView
                        android:id="@+id/zaTongNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自营桶数量： "/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ziYingRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15">

                </android.support.v7.widget.RecyclerView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="补贴方式:"/>
                    <TextView
                        android:id="@+id/buTieWay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="水票"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="补贴金额："/>
                    <TextView
                        android:id="@+id/shuiPiaoName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正哥水店水票"/>
                    <TextView
                        android:id="@+id/shuiPiaoNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="111dp"
                        android:text="x10"
                        android:visibility="invisible"/>
                    <TextView
                        android:id="@+id/shuiPiaoStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="未交易"
                        android:textColor="#30ADFD"/>
                </LinearLayout>
            </LinearLayout>
                <TextView
                    android:id="@+id/zaTongBucketBtn"
                    android:layout_width="@dimen/dp_130"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/orange_rectangle"
                    android:gravity="center"
                    android:text="添加杂桶"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/font_14" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_20">

            <TextView
                android:id="@+id/unPayBtn"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_weight="1"
                android:background="@drawable/orange_rectangle"
                android:gravity="center"
                android:text="赊账"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/sureBtn"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_weight="1"
                android:background="@drawable/blue_rectangle"
                android:gravity="center"
                android:text="确认送达"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_14" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
