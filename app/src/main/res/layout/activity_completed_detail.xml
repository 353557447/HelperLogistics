<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginBottom="@dimen/d12"
            android:layout_marginTop="@dimen/d12"
            android:layout_marginRight="@dimen/d12"
            android:layout_marginLeft="@dimen/d12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_solid_five_radius_bg"
                android:orientation="vertical"
                android:padding="@dimen/dp_15">

                <TextView
                    android:id="@+id/completed_detail_order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提货单号："
                    android:textColor="#181818"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/completed_detail_huicang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="回仓时间："
                    android:textColor="#181818"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/completed_detail_tuihuo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="退货时间："
                    android:textColor="#181818"
                    android:textSize="14sp" />



                <TextView
                    android:id="@+id/completed_detail_fuze"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="仓管员："
                    android:textColor="#181818"
                    android:textSize="14sp" />

                <TextView
                    android:layout_marginTop="@dimen/margin10"
                    android:id="@+id/completed_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提货司机："
                    android:textColor="#181818"
                    android:textSize="14sp" />

            </LinearLayout>




            <LinearLayout
                android:padding="@dimen/padding16"
                android:background="@drawable/white_solid_five_radius_bg"
                android:layout_marginTop="@dimen/d12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出货"
                    android:textColor="#FF4D14"
                    android:textSize="@dimen/d16" />

                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/d15"
                    android:textColor="@color/textBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="需提货" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/completed_detail_need_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"></android.support.v7.widget.RecyclerView>

                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/d15"
                    android:textColor="@color/textBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实际提货" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/completed_detail_actual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"></android.support.v7.widget.RecyclerView>
            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="@dimen/d12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_solid_five_radius_bg"
                android:orientation="vertical"
                android:padding="@dimen/padding16">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回仓"
                    android:textColor="#FF4D14"
                    android:textSize="@dimen/d16" />

                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/d15"
                    android:textColor="@color/textBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回自营桶" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/completed_detail_hui_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"></android.support.v7.widget.RecyclerView>


                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/d15"
                    android:textColor="@color/textBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="烂水" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/completed_detail_tui_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"></android.support.v7.widget.RecyclerView>

                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/d15"
                    android:textColor="@color/textBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="杂桶" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:textColor="@color/black"
                        android:textSize="@dimen/d14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="杂桶数量：" />

                    <TextView
                        android:id="@+id/zatong_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:textSize="@dimen/d14"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="破桶数量：" />

                    <TextView
                        android:id="@+id/potong_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="" />
                </RelativeLayout>

                <TextView
                    android:textColor="@color/black"
                    android:textSize="@dimen/d14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="杂桶交换自营桶" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/completed_detail_ziying_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"></android.support.v7.widget.RecyclerView>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
