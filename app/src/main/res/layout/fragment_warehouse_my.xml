<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5f5f5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/color_30adfd"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/msgBtn"
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_21"
                android:layout_marginLeft="@dimen/dp_7"
                android:src="@drawable/xiaoxi" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_14" />

            <ImageView
                android:id="@+id/setBtn"
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_21"
                android:layout_marginRight="@dimen/dp_7"
                android:src="@drawable/shezhi" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/my_bg"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/dp_85"
                android:layout_height="@dimen/dp_85"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@drawable/morentouxiang" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/font_16"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/unOrder"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_160"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@drawable/my_time"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dp_10"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_30"
                android:text="今日待出货\n" />
            <View
                android:layout_width="@dimen/dp_10"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/doOrder"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_160"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@drawable/my_car"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dp_10"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_30"
                android:text="今日已出货\n" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/historyOrder"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_160"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@drawable/my_order"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dp_10"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_30"
                android:text="历史出货\n" />
            <View
                android:layout_width="@dimen/dp_10"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_160"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@drawable/my_time"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dp_10"
                android:orientation="vertical"
                android:visibility="invisible"
                android:paddingTop="@dimen/dp_30"
                android:text="今日已出货\n" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>