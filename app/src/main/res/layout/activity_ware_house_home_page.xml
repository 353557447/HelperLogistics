<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".activitywarehouse.WareHouseHomePageActivity">

    <com.shuiwangzhijia.wuliu.view.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_top_bg" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d80"
                    android:paddingLeft="@dimen/d30"
                    android:paddingRight="@dimen/padding10">

                    <TextView
                        android:id="@+id/driver_name"
                        style="@style/textWhite18"
                        android:text="老王" />

                    <TextView
                        android:id="@+id/driver_phone"
                        style="@style/textWhite15"
                        android:layout_alignBottom="@id/driver_name"
                        android:layout_marginLeft="@dimen/margin20"
                        android:layout_marginBottom="@dimen/d1"
                        android:layout_toRightOf="@id/driver_name"
                        android:text="13695458645" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/driver_name"
                        android:layout_marginTop="@dimen/margin3"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/textWhite12"
                            android:background="@drawable/yellow_solid_big_radius_bg"
                            android:gravity="center"
                            android:paddingLeft="@dimen/padding16"
                            android:paddingTop="@dimen/d2"
                            android:paddingRight="@dimen/padding16"
                            android:paddingBottom="@dimen/d2"
                            android:text="仓库员"
                            android:textSize="@dimen/d12" />

                        <TextView
                            style="@style/textWhite11"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin10"
                            android:text="B号仓库" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin5"
                            android:src="@drawable/right_white_arrow" />
                    </LinearLayout>


                    <ImageView
                        android:layout_width="@dimen/d64"
                        android:layout_height="@dimen/d64"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/margin5"
                        android:src="@drawable/no_head_default_img" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d34"
                android:layout_marginLeft="@dimen/d12"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginRight="@dimen/d12"
                android:background="@drawable/white_solid_five_radius_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_marginRight="@dimen/margin10"
                    android:src="@drawable/gray_search_icon" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="输入出货单号/订单号"
                    android:textSize="@dimen/d12" />

                <TextView
                    android:layout_width="@dimen/d54"
                    android:layout_height="match_parent"
                    android:background="@drawable/search_bar_right_bg"
                    android:gravity="center"
                    android:text="搜索"
                    android:textColor="@color/white"
                    android:textSize="@dimen/d12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d92"
                android:layout_marginLeft="@dimen/d12"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginRight="@dimen/d12"
                android:background="@drawable/white_solid_five_radius_bg"
                android:orientation="vertical">

                <TextView
                    style="@style/textBlack15"
                    android:layout_marginLeft="@dimen/margin16"
                    android:layout_marginTop="@dimen/margin16"
                    android:text="今日统计"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin8"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/total_balance_ll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/total_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="0"
                            android:textColor="@color/textRed"
                            android:textSize="@dimen/d12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin5"
                            android:text="提货量"
                            android:textColor="#262525"
                            android:textSize="@dimen/d10" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/d19"
                        android:layout_gravity="center_vertical"
                        android:background="#FCADCC" />

                    <LinearLayout
                        android:id="@+id/total_return_money_ll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/total_return_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="0"
                            android:textColor="@color/textRed"
                            android:textSize="@dimen/d12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin5"
                            android:text="回桶数"
                            android:textColor="#262525"
                            android:textSize="@dimen/d10" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/d19"
                        android:layout_gravity="center_vertical"
                        android:background="#FCADCC" />

                    <LinearLayout
                        android:id="@+id/discount_coupon_counts_ll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/discount_coupon_counts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="0"
                            android:textColor="@color/textRed"
                            android:textSize="@dimen/d12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin5"
                            android:text="待提货"
                            android:textColor="#262525"
                            android:textSize="@dimen/d10" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:layout_marginLeft="@dimen/d12"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginRight="@dimen/d12"
                android:background="@drawable/white_solid_five_radius_bg"
                android:orientation="vertical">

                <TextView
                    style="@style/textBlack15"
                    android:layout_marginLeft="@dimen/margin16"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="自提订单"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/already_return_bucket"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerInside"
                            android:src="@drawable/already_return_bucket_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:text="已回桶 "
                            android:textColor="#262525"
                            android:textSize="12dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/wait_for_get"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerInside"
                            android:src="@drawable/wait_for_get_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:text="待提货"
                            android:textColor="#262525"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/completed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerInside"
                            android:src="@drawable/completed_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:text="已完成"
                            android:textColor="#262525"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:layout_marginLeft="@dimen/d12"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginRight="@dimen/d12"
                android:background="@drawable/white_solid_five_radius_bg"
                android:orientation="vertical">

                <TextView
                    style="@style/textBlack15"
                    android:layout_marginLeft="@dimen/margin16"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="配送订单"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/send_wait_for_get"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerInside"
                            android:src="@drawable/wh_wait_for_get_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:text="待提货"
                            android:textColor="#262525"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/send_distributioning"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerInside"
                            android:src="@drawable/send_distributioning_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:text="配送中"
                            android:textColor="@color/textBlack"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/send_completed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerInside"
                            android:src="@drawable/send_completed_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:text="已完成"
                            android:textColor="#262525"
                            android:textSize="12dp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.shuiwangzhijia.wuliu.view.MyScrollView>

    <RelativeLayout
        android:id="@+id/title_bar_rl"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingLeft="@dimen/padding10"
        android:paddingRight="@dimen/padding10">

        <TextView
            style="@style/textWhite18"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="九重岩水厂"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:padding="3dp"
            android:src="@drawable/setting_icon" />
    </RelativeLayout>
</FrameLayout>