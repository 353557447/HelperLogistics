<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/font_10">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="空气水"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_46"
            android:visibility="gone"
            android:src="@color/color_30adfd" />

        <LinearLayout
            android:id="@+id/llAddCut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="visible"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/right_dish_remove"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:clickable="true"
                android:src="@drawable/jian" />

            <TextView
                android:id="@+id/right_dish_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_16" />

            <ImageView
                android:id="@+id/right_dish_add"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:clickable="true"
                android:src="@drawable/jia" />

        </LinearLayout>

        <TextView
            android:id="@+id/deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:text="删除"
            android:textColor="@color/color_ff3939"
            android:textSize="@dimen/font_14" />
        <TextView
            android:id="@+id/numTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x30"
            android:visibility="gone"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_16"
            android:textStyle="bold"
            />

    </LinearLayout>

</LinearLayout>