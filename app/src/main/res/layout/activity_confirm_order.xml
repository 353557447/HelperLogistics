<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/confirm_order_top_bg" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/title_bar_rl"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <RelativeLayout
                android:id="@+id/back_return"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_60"
                    android:src="@drawable/back" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="37dp"
                android:text="确认订单"
                android:textColor="@color/white"
                android:textSize="@dimen/d18"
                android:textStyle="bold" />
        </RelativeLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d12"
                    android:layout_marginRight="@dimen/d12"
                    android:layout_marginTop="@dimen/d12"
                    app:cardCornerRadius="@dimen/d5"
                    app:cardElevation="@dimen/d5">

                    <RelativeLayout
                        android:id="@+id/llAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_15">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_15"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#4C4B4B"
                                android:textSize="@dimen/d15"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin10"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="请选择收货人地址信息"
                                    android:textColor="#4C4B4B"
                                    android:textSize="@dimen/d14" />

                                <TextView
                                    android:id="@+id/phone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d30"
                                    android:textColor="#4C4B4B"
                                    android:textSize="@dimen/d14" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/choose" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d12"
                    android:layout_marginRight="@dimen/d12"
                    android:layout_marginTop="@dimen/d12"
                    app:cardCornerRadius="@dimen/d5"
                    app:cardElevation="@dimen/d5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/shopName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/color_ffffff"
                            android:drawableLeft="@drawable/shuidian"
                            android:drawablePadding="@dimen/dp_10"
                            android:padding="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_10"
                            android:paddingLeft="@dimen/dp_15"
                            android:text=""
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/font_12"
                            android:visibility="gone" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/dp_10"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingTop="@dimen/dp_10"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawablePadding="@dimen/dp_10"
                                android:text="请选择水票"
                                android:textColor="@color/textBlack"
                                android:textSize="@dimen/font_15" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/dp_10"
                                android:drawableRight="@drawable/choose"
                                android:gravity="center_vertical|right"
                                android:textColor="#FF4D14"
                                android:textSize="@dimen/font_14" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/line0.5"
                            android:background="@color/lineColor" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:background="#FFFFFF">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="15dp"
                                android:text="订单类型"
                                android:textColor="#4C4B4B"
                                android:textSize="@dimen/font_15" />

                            <RadioGroup
                                android:id="@+id/radio_group"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/margin10"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/payMoneyBtn"
                                    android:layout_width="110dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/pay_type_rb_bg"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:text="在线支付"
                                    android:textColor="@drawable/pay_type_text_selector"
                                    android:textSize="@dimen/font_14" />

                                <RadioButton
                                    android:id="@+id/ticketBtn"
                                    android:layout_width="110dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/pay_type_rb_bg"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:text="货到付款"
                                    android:textColor="@drawable/pay_type_text_selector"
                                    android:textSize="@dimen/font_14" />
                            </RadioGroup>
                        </RelativeLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/llSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d12"
                    android:layout_marginRight="@dimen/d12"
                    android:layout_marginTop="@dimen/d12"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/d5"
                    app:cardElevation="@dimen/d5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:background="@color/color_ffffff"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_10">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/peisongshijian"
                            android:drawablePadding="@dimen/dp_10"
                            android:drawableRight="@drawable/choose"
                            android:text="预约配送时间"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:id="@+id/schedule"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_32"
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center_vertical|right"
                            android:text="立即送出（预计2小时内）"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/font_14" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d12"
                    android:layout_marginRight="@dimen/d12"
                    android:layout_marginTop="@dimen/d12"
                    app:cardCornerRadius="@dimen/d5"
                    app:cardElevation="@dimen/d5">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_ffffff"></android.support.v7.widget.RecyclerView>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/d50"
                    android:layout_marginLeft="@dimen/d12"
                    android:layout_marginRight="@dimen/d12"
                    android:layout_marginTop="@dimen/d12"
                    app:cardCornerRadius="@dimen/d5"
                    app:cardElevation="@dimen/d5">

                    <LinearLayout
                        android:id="@+id/llMark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_ffffff"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="备注"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/font_15" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_10"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/selectBucket"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_30"
                                android:drawableLeft="@drawable/bucket_check"
                                android:drawablePadding="@dimen/dp_10"
                                android:gravity="center_vertical"
                                android:text="有桶"
                                android:textColor="@color/color_999999"
                                android:textSize="@dimen/font_12" />

                            <TextView
                                android:id="@+id/unSelectBucket"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/bucket_check"
                                android:drawablePadding="@dimen/dp_10"
                                android:gravity="center_vertical"
                                android:text="无桶"
                                android:textColor="@color/color_999999"
                                android:textSize="@dimen/font_12" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@null"
                            android:gravity="left"
                            android:maxEms="200"
                            android:maxLength="200"
                            android:minHeight="@dimen/d30"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_5"
                            android:paddingTop="@dimen/dp_5"
                            android:text=""
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:id="@+id/count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/color_e5e5e5"
                            android:gravity="center_vertical|right"
                            android:paddingBottom="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_5"
                            android:text="0/200"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/font_12"
                            android:visibility="gone" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line0.5"
            android:background="@color/lineColor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bar_height50"
            android:background="@color/white"
            android:paddingLeft="@dimen/padding16">

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="￥0"
                android:textColor="@color/textRed"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/payBtn"
                android:layout_width="@dimen/dp_130"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/common_yellow"
                android:gravity="center"
                android:text="立即下单"
                android:textColor="@color/white"
                android:textSize="@dimen/font_16" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
