<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/shopName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:drawableLeft="@drawable/shuidian"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_10"
        android:text="水店"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_12" />

    <View style="@style/line" />

    <TextView
        android:id="@+id/orderId"
        style="@style/order_detail_info_text"
        android:layout_marginTop="@dimen/dp_5"
        android:text="订单号码:15246313021032" />


    <TextView
        android:id="@+id/createTime"
        style="@style/order_detail_info_text"
        android:text="下单时间:2018-10-12 12:36:23" />

    <EditText
        android:id="@+id/commentEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/color_e5e5e5"
        android:gravity="left"
        android:maxEms="150"
        android:maxLength="150"
        android:minHeight="@dimen/dp_85"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"
        android:text=""
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_15" />

    <TextView
        android:id="@+id/count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_e5e5e5"
        android:gravity="center_vertical|right"
        android:paddingBottom="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:text="0/150"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/font_12" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:drawableLeft="@drawable/pingjia"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_10"
        android:text="水店服务评价"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:paddingTop="@dimen/dp_25">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="商品符合度"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_12" />

        <RatingBar
            android:id="@+id/goodsStartNum"
            style="@style/startRatingStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:numStars="5"
            android:rating="4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:paddingTop="@dimen/dp_25">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="水店服务态度"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_12" />

        <RatingBar
            android:id="@+id/serviceStartNum"
            style="@style/startRatingStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:numStars="5"
            android:rating="4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:paddingTop="@dimen/dp_25">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="水店配送速度"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_12" />

        <RatingBar
            android:id="@+id/speedStartNum"
            style="@style/startRatingStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:numStars="5"
            android:rating="4" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/postBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/blue_rectangle"
        android:gravity="center"
        android:text="提交评论"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/font_16" />
</LinearLayout>