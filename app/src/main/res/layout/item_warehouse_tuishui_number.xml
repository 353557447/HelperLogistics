<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/font_10">

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="空气水"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_16" />


    <TextView
        android:id="@+id/numTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x30"
        android:textColor="@color/color_ff8331"
        android:textSize="@dimen/font_16"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/llAddCut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/right_dish_remove"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:clickable="true"
            android:src="@drawable/jian" />

        <TextView
            android:id="@+id/right_dish_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_16" />

        <ImageView
            android:id="@+id/right_dish_add"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:clickable="true"
            android:src="@drawable/jia" />

    </LinearLayout>


</LinearLayout>