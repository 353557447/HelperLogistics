<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提货人：哈哈"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_16"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/status"
                android:layout_width="38dp"
                android:layout_height="15dp"
                android:background="@drawable/blue_rectangle"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="配送"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical"
                android:textSize="11sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/callBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_15"
            android:src="@drawable/phone" />
    </LinearLayout>

    <TextView
        android:id="@+id/orderId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="出货订单:12531646131634613133131"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_16" />

    <LinearLayout
        android:id="@+id/llDetailInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            style="@style/line"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/needNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_70"
                android:text="需提货：130"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/postNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已提货：100"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/returnWaterNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_40"
                android:text="退水：130"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/returnBucketNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_40"
                android:text="回桶：130"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/otherBucketNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="杂桶：100"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_16" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/orderDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="下单时间:2017-8-21 12:30:50"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/font_16" />

    <TextView
        android:id="@+id/remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="备注：今天12点来提货的，过程是10分钟"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/font_16" />

    <View
        android:id="@+id/up_rv"
        style="@style/line"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"></android.support.v7.widget.RecyclerView>

    <View
        style="@style/line"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingRight="@dimen/dp_10"
            android:text="共2件"
            android:textColor="@color/color_30adfd"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/firstBtn"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/blue_rectangle"
            android:gravity="center"
            android:text="确认提货"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_15" />
    </LinearLayout>
</LinearLayout>