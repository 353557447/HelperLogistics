<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding5"
    android:paddingBottom="@dimen/padding5"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小分子空气水"
        android:layout_gravity="center_vertical"
        android:textColor="#181818"
        android:textSize="14sp"/>



    <LinearLayout
        android:id="@+id/llAddCut"
        android:layout_alignParentRight="true"
        android:padding="@dimen/d1"
        android:background="@drawable/gray_solid_two_radius_bg"
        android:layout_width="@dimen/d81"
        android:layout_height="@dimen/d21">
        <RelativeLayout
            android:id="@+id/right_dish_remove"
            android:background="@color/white"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/goods_subtract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="@dimen/d1"
            android:background="@color/white"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/right_dish_account"
                android:ellipsize="end"
                android:lines="1"
                android:layout_centerInParent="true"
                android:text="0"
                style="@style/textBlack12" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/right_dish_add"
            android:layout_marginLeft="@dimen/d1"
            android:background="@color/white"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/goods_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:layout_toRightOf="@id/name"
        android:visibility="gone"
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textRed"
        android:textSize="14sp"/>
</RelativeLayout>