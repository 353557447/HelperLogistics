<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5f5f5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@color/color_ffffff"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/font_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="回收杂桶确认"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="杂桶数量"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/remove"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:clickable="true"
                    android:src="@drawable/jian" />

                <TextView
                    android:id="@+id/account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_16" />

                <ImageView
                    android:id="@+id/add"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:clickable="true"
                    android:src="@drawable/jia" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:background="@color/color_ffffff"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="杂桶交换自营桶"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_14" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/bucketRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"></android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/addBucketBtn"
                    android:layout_width="@dimen/dp_130"
                    android:layout_height="@dimen/dp_40"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/orange_rectangle"
                    android:gravity="center"
                    android:text="添加自营桶"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="补贴方式"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:orientation="horizontal">
                <!--android:background="@drawable/bg_blue_gray"-->
                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/payMoneyBtn"
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:button="@null"
                        android:text="支付金额"
                        android:textColor="@color/color_ffffff"
                        android:textSize="@dimen/font_14"
                        android:gravity="center"
                        android:background="@drawable/blue_rectangle"/>

                    <!--<RadioButton-->
                        <!--android:id="@+id/ticketBtn"-->
                        <!--android:layout_width="110dp"-->
                        <!--android:layout_height="30dp"-->
                        <!--android:button="@null"-->
                        <!--android:text="选水票"-->
                        <!--android:textColor="@color/color_ffffff"-->
                        <!--android:layout_marginLeft="40dp"-->
                        <!--android:textSize="@dimen/font_14"-->
                        <!--android:gravity="center"-->
                        <!--android:background="@drawable/bg_blue_gray"/>-->
                </RadioGroup>


                <!--<TextView-->
                    <!--android:id="@+id/payMoneyBtn"-->
                    <!--android:layout_width="@dimen/dp_110"-->
                    <!--android:layout_height="@dimen/dp_30"-->
                    <!--android:layout_marginRight="@dimen/dp_40"-->
                    <!--android:clickable="true"-->
                    <!--android:background="@drawable/bg_blue_gray"-->
                    <!--android:gravity="center"-->
                    <!--android:text="支付金额"-->
                    <!--android:textColor="@color/color_ffffff"-->
                    <!--android:textSize="@dimen/font_14" />-->

                <!--<TextView-->
                    <!--android:id="@+id/ticketBtn"-->
                    <!--android:layout_width="@dimen/dp_110"-->
                    <!--android:layout_height="@dimen/dp_30"-->
                    <!--android:layout_marginLeft="@dimen/dp_40"-->
                    <!--android:clickable="true"-->
                    <!--android:background="@drawable/bg_blue_gray"-->
                    <!--android:gravity="center"-->
                    <!--android:text="选水票"-->
                    <!--android:textColor="@color/color_ffffff"-->
                    <!--android:textSize="@dimen/font_14" />-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/select_zhifu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="补贴金额"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_14" />

                <EditText
                    android:id="@+id/numTv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/gray_rectangle"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:hint="￥"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/payStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="支付状态：未支付"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/color_ffffff"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="补贴水票"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_14" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ticketRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"></android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/addTicketBtn"
                    android:layout_width="@dimen/dp_130"
                    android:layout_height="@dimen/dp_40"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/orange_rectangle"
                    android:gravity="center"
                    android:text="添加水票"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/sureBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="@dimen/dp_30"
            android:background="@drawable/blue_rectangle"
            android:gravity="center"
            android:text="去支付"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_14" />
    </LinearLayout>
</ScrollView>