<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d12"
                android:layout_marginTop="@dimen/d12"
                android:layout_marginRight="@dimen/d12"
                android:background="@drawable/white_solid_five_radius_bg"
                android:orientation="vertical"
                android:padding="@dimen/padding16">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/orderId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="出货单号:12531646131634613133131"
                        android:textColor="@color/textBlack"
                        android:textSize="@dimen/d14" />

                    <TextView
                        android:id="@+id/order_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="配送订单"
                        android:textColor="@color/textRed"
                        android:textSize="@dimen/d14" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/name"
                    style="@style/textBlack14"
                    android:layout_marginTop="@dimen/margin16"
                    android:text="提货人：王司机" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d12"
                android:layout_marginTop="@dimen/d12"
                android:layout_marginRight="@dimen/d12"
                android:background="@drawable/white_solid_five_radius_bg"
                android:orientation="vertical"
                android:padding="@dimen/padding16">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="实际提货数量"
                        android:textColor="@color/textBlack"
                        android:textSize="@dimen/d16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/needTiHuo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="需提货160桶"
                        android:textColor="@color/textRed"
                        android:textSize="@dimen/d16"
                        android:textStyle="bold" />


                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/numRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin16"></android.support.v7.widget.RecyclerView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d12"
                android:layout_marginTop="@dimen/d12"
                android:layout_marginRight="@dimen/d12"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/operate_top_bg">

                    <TextView
                        android:id="@+id/realTitle"
                        style="@style/textBlack16"
                        android:layout_marginLeft="@dimen/margin16"
                        android:layout_marginTop="@dimen/margin16"
                        android:text="回桶自营桶"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/huiShouEdit"
                        android:paddingTop="@dimen/padding3"
                        android:paddingBottom="@dimen/padding3"
                        android:layout_width="@dimen/d74"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/edit_yellow_solid_big_radius_bg"
                        android:gravity="center"
                        android:text="编辑"
                        android:textColor="@color/white"
                        android:textSize="@dimen/d14" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/operate_bottom_bg">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/realRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin16"
                        android:layout_marginRight="@dimen/margin16"></android.support.v7.widget.RecyclerView>
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llReturnWareHouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d12"
                android:layout_marginTop="@dimen/d12"
                android:layout_marginRight="@dimen/d12"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/operate_top_bg">

                    <TextView
                        style="@style/textBlack16"
                        android:layout_marginLeft="@dimen/margin16"
                        android:layout_marginTop="@dimen/margin16"
                        android:text="退水数量"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/editSelfBucket"
                        android:paddingBottom="@dimen/padding3"
                        android:paddingTop="@dimen/padding3"
                        android:layout_width="@dimen/d74"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/edit_yellow_solid_big_radius_bg"
                        android:gravity="center"
                        android:text="编辑"
                        android:textColor="@color/white"
                        android:textSize="@dimen/d14" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/operate_bottom_bg">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/selfBucketRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin16"
                        android:layout_marginRight="@dimen/margin16"></android.support.v7.widget.RecyclerView>
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d12"
                android:layout_marginTop="@dimen/d12"
                android:layout_marginRight="@dimen/d12"
                android:background="@drawable/white_solid_five_radius_bg"
                android:orientation="vertical"
                android:padding="@dimen/padding16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回收桶"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/d16"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_marginTop="@dimen/margin5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="杂桶"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/font_16" />


                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/d1"
                        android:background="@drawable/gray_solid_two_radius_bg"
                        android:layout_width="@dimen/d81"
                        android:layout_height="@dimen/d21">
                        <RelativeLayout
                            android:id="@+id/remove"
                            android:background="@color/white"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_centerInParent="true"
                                android:src="@drawable/goods_subtract"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginLeft="@dimen/d1"
                            android:background="@color/white"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/account"
                                android:ellipsize="end"
                                android:lines="1"
                                android:layout_centerInParent="true"
                                android:text="0"
                                style="@style/textBlack12" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/add"
                            android:layout_marginLeft="@dimen/d1"
                            android:background="@color/white"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_centerInParent="true"
                                android:src="@drawable/goods_add"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="@dimen/margin5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="破桶"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/font_16" />


                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/d1"
                        android:background="@drawable/gray_solid_two_radius_bg"
                        android:layout_width="@dimen/d81"
                        android:layout_height="@dimen/d21">
                        <RelativeLayout
                            android:id="@+id/po_remove"
                            android:background="@color/white"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_centerInParent="true"
                                android:src="@drawable/goods_subtract"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginLeft="@dimen/d1"
                            android:background="@color/white"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/po_account"
                                android:ellipsize="end"
                                android:lines="1"
                                android:layout_centerInParent="true"
                                android:text="0"
                                style="@style/textBlack12" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/po_add"
                            android:layout_marginLeft="@dimen/d1"
                            android:background="@color/white"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_centerInParent="true"
                                android:src="@drawable/goods_add"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

















            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_f5f5f5"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_10">
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_f5f5f5"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/color_f5f5f5"
                            android:text="换桶"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/font_16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/editHuishou"
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="@dimen/dp_30"
                            android:background="@drawable/blue_rectangle"
                            android:gravity="center"
                            android:text="编辑"
                            android:textColor="@color/color_ffffff"
                            android:textSize="@dimen/font_15"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/ziyingrv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="10dp"
                        android:visibility="gone"></android.support.v7.widget.RecyclerView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_ffffff"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_15">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="回收杂桶"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/font_16" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:clickable="true"
                                android:src="@drawable/jian" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginRight="@dimen/dp_15"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/color_30adfd"
                                android:textSize="@dimen/font_16" />

                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:clickable="true"
                                android:src="@drawable/jia" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_ffffff"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="回收破桶"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/font_16" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:clickable="true"
                                android:src="@drawable/jian" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginRight="@dimen/dp_15"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/color_30adfd"
                                android:textSize="@dimen/font_16" />

                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:clickable="true"
                                android:src="@drawable/jia" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/sureBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@color/common_yellow"
        android:gravity="center"
        android:text="回仓确认"
        android:textColor="@color/textWhite"
        android:textSize="@dimen/d14" />
</LinearLayout>
