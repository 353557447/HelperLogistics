<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/mSwipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/deliver_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:layout_marginTop="10dp"
                        android:background="#FFFFFF"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/deliver_consignee"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="提货人：正哥"
                                    android:textColor="#333333"
                                    android:textSize="17sp" />

                                <TextView
                                    android:id="@+id/callBtn"
                                    android:layout_width="@dimen/dp_90"
                                    android:layout_height="@dimen/dp_25"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginBottom="3dp"
                                    android:background="@drawable/gray_line_rectangle"
                                    android:gravity="center"
                                    android:text="联系商家"
                                    android:textColor="@color/color_999999"
                                    android:textSize="@dimen/font_12"
                                    android:visibility="gone" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/deliver_order_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="出货单号：123456"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/deliver_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="下单时间: 2018-11-27  19:00:50"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/deliver_remark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="备注：暂时无备注"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="15dp"
                                android:background="#E5E5E5" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/deliver_total_number"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="已提货60桶"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/deliver_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#30ADFD"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/deliver_rv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:background="#F6F6F6"></android.support.v7.widget.RecyclerView>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/deliver_no_distribution"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="未配送30桶"
                            android:textSize="12sp" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/no_distribution_rv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="#F6F6F6"></android.support.v7.widget.RecyclerView>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/deliver_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_20">

                        <TextView
                            android:id="@+id/deliver_delete_order"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="49dp"
                            android:layout_weight="1"
                            android:background="@drawable/orange_rectangle"
                            android:gravity="center"
                            android:text="删除订单"
                            android:textColor="@color/color_ffffff"
                            android:textSize="@dimen/font_14" />

                        <TextView
                            android:id="@+id/deliver_edit_order"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="49dp"
                            android:layout_marginRight="49dp"
                            android:layout_weight="1"
                            android:background="@drawable/blue_rectangle"
                            android:gravity="center"
                            android:text="编辑订单"
                            android:textColor="@color/color_ffffff"
                            android:textSize="@dimen/font_14" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>


        </android.support.v4.widget.SwipeRefreshLayout>


    <RelativeLayout
        android:id="@+id/rlEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/wudingdan" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv"
            android:gravity="center"
            android:text="请创建出货单~~"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_12" />
    </RelativeLayout>

</LinearLayout>