<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/mSwipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                    <LinearLayout
                        android:id="@+id/deliver_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d12"
                        android:layout_marginRight="@dimen/d12"
                        android:layout_marginTop="@dimen/d12"
                        android:background="@drawable/order_entirety_bg"
                        android:orientation="vertical"
                        android:padding="@dimen/padding16">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="出货单号："
                                    android:textColor="#FFF000"
                                    android:textSize="@dimen/d14" />

                                <TextView
                                    android:id="@+id/deliver_order_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/d14" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin10"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="下单时间："
                                    android:textColor="#FFF000"
                                    android:textSize="@dimen/d14" />

                                <TextView
                                    android:id="@+id/deliver_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="下单时间: 2018-11-27  19:00:50"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin10"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/deliver_consignee"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="提货人：正哥"
                                    android:textColor="@color/textWhite"
                                    android:textSize="@dimen/d14" />

                                <TextView
                                    android:id="@+id/callBtn"
                                    android:layout_width="@dimen/dp_90"
                                    android:layout_height="@dimen/dp_25"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginBottom="3dp"
                                    android:background="@drawable/gray_line_rectangle"
                                    android:gravity="center"
                                    android:text="联系商家"
                                    android:textColor="@color/color_999999"
                                    android:textSize="@dimen/font_12"
                                    android:visibility="gone" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/deliver_remark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="备注：暂时无备注"
                                android:textColor="#FECBD9"
                                android:textSize="@dimen/d14" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin10"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/deliver_total_number"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="已提货60桶"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/d14" />

                                <TextView
                                    android:id="@+id/deliver_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/d14" />
                            </LinearLayout>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/deliver_rv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"></android.support.v7.widget.RecyclerView>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/deliver_no_distribution"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin10"
                            android:text="未配送30桶"
                            android:textColor="@color/white"
                            android:textSize="@dimen/d14" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/no_distribution_rv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"></android.support.v7.widget.RecyclerView>
                    </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/deliver_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height50"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/deliver_delete_order"
            android:layout_width="0dp"
            android:layout_height="@dimen/d28"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="49dp"
            android:layout_weight="1"
            android:background="@drawable/orange_rectangle"
            android:gravity="center"
            android:text="删除订单"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/deliver_edit_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF4D14"
            android:gravity="center"
            android:text="编辑订单"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/wudingdan" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv"
            android:gravity="center"
            android:text="请创建出货单~~"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_12" />
    </RelativeLayout>

</LinearLayout>